{
    "compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6"
		],
		"skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
		"rootDir": "src",
		"strict": true   /* enable all strict type-checking options */
	},
	"exclude": [
		"**/node_modules",
		"**/.vscode-test",
		"**/dist",
        "**/vscode-dotnet-sdk-extension/src/test/",
        "**/vscode-dotnet-runtime-extension/src/test/",
        "**/vscode-dotnet-runtime-library/src/test/",
        "**/sample"
	]
}
